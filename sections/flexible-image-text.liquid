    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón"
    },
    {
      "type": "checkbox",
      "id": "button_full_width",
      "label": "Botón a ancho completo",
      "default": false
    },
    {
      "type": "select",
      "id": "button_alignment",
      "label": "Alineación del botón",
      "options": [
