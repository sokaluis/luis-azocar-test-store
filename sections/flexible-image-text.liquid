      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Tamaño de texto del botón",
      "default": 16
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Color de fondo del botón",
      "default": "#E60087"
    },
