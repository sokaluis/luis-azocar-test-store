      "default": 36
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color del título"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Tamaño del texto",
      "default": 16
    },
    {
      "type": "color",
      "id": "text_color",
